# ==============================================
# DND AI Adventure Game - Environment Variables
# ==============================================
# Copy this file to .env and update the values
# DO NOT commit .env to version control!

# Database Configuration
POSTGRES_USER=dnd_admin
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=dnd_adventure
DATABASE_URL=postgresql://dnd_admin:change_this_password_in_production@localhost:5432/dnd_adventure

# JWT Authentication
JWT_SECRET=generate_a_random_32_character_string_here
JWT_EXPIRY=86400

# pgAdmin (optional)
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=change_this_password

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=qwen2.5:3b-instruct
OLLAMA_EMBED_MODEL=nomic-embed-text

# API Configuration
API_URL=http://localhost:3002
API_PORT=3000

